@model FoodNStuff.MVC.Models.Transaction
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Transaction</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TransactionID)

    <div class="form-group">
        @Html.LabelFor(model => model.CustomerID, "Customer", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*string calls viewbag in controller*@
            @Html.DropDownList("CustomerID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CustomerID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.ProductID, "Product", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*string calls viewbag in product*@
            @Html.DropDownList("ProductID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>